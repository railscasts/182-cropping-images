<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :avatar_image %><br />
    <%= f.file_field :avatar_image %><br />
    <%= f.hidden_field :retained_avatar_image %>
    <%= image_tag @user.avatar_thumb.url if @user.avatar_image %><br />
    <%= f.label :remove_avatar_image if @user.avatar_image %>
    <%= f.check_box :remove_avatar_image if @user.avatar_image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
